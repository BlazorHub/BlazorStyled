@inherits LayoutComponentBase
@inject IStyled Styled
@inject IMixins Mixins

    <div class="@container">
        <div class="@navColumn">
            <div class="@topNav"><h1 class="@brand">BlazorStyled</h1></div>
            <div class="@bottom">
                <NavMenu />
            </div>
        </div>
        <div class="@mainColumn">
            <div class="@topMain">
                <ul class="@ul">
                    <li class="@li"><a href="https://github.com/chanan/BlazorStyled"><img src="https://img.shields.io/github/stars/chanan/BlazorStyled.svg?style=social&label=Stars" /></a></li>
                    <li class="@li"><a href="https://www.nuget.org/packages/BlazorStyled/"><img src="https://img.shields.io/nuget/vpre/BlazorStyled.svg" /></a></li>
                </ul>
            </div>
            <div class="@bottom">
                @Body
            </div>
        </div>
    </div>

@code {
    private string container, navColumn, mainColumn, topNav, topMain, bottom, brand, ul, li;

    protected override void OnInit()
    {
        Styled.Css(Mixins.Normalize());

        Styled.Css(Mixins.FontFace(new FontFaceConfiguration {
            FontFamily = "Fira Mono",
            FontStyle = "normal",
            FontWeight = "400",
            FontDisplay = "swap",
            LocalFonts = new List<string> { "Fira Mono Regular", "FiraMono-Regular" },
            FontFilePath = "https://fonts.gstatic.com/s/firamono/v7/N0bX2SlFPv1weGeLZDtgJv7S",
            FileFormats = new List<string> { "woff2" },
            UnicodeRange = "U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD"
        }));

        Styled.Css("html", @"
            height: 100%;
        ");

        Styled.Css("body", @"
            height: 100%;
            overflow: hidden;
            margin: 0px;
            box-sizing: border-box;
        ");

        Styled.Css("p > code", @"
            font-family: 'Fira Mono';
            margin-top: 20px;
            color: #1B1D1D;
            font-weight: 400;
            line-height: 1.7;
            background-color: rgba(117,63,131,0.07);
            border-radius: 0.325rem;
            margin: 0;
            padding: 0.2rem 0.325rem;
        ");

        container = Styled.Css(@"
            width: 1024px;
            height: 100%;   
            overflow: hidden;
            margin: auto;
            display: flex;
            box-sizing: border-box;
        ");

        string column = @"
            height: 100%;
            display: flex;
            flex-direction: column;
        ";

        navColumn = Styled.Css($@"
            {column}
            flex-shrink: 0;
        ");

        mainColumn = Styled.Css($@"
            {column}
            width: 876px;
        ");

        topNav = Styled.Css(@"
            flex-shrink: 0;
            padding: 20px 20px 20px 0px;
        ");

        topMain = Styled.Css(@"
            flex-shrink: 0;
            display: inline-flex;
            padding: 20px;
        ");

        bottom = Styled.Css(@"
            flex-grow: 1;
            overflow-y: auto;
            padding: 20px;
        ");

        brand = Styled.Css(@"
            margin: 0;
            margin-left: 16px;
            padding: 0;
            font-size: 24px;
            color: #D36AC2;
        ");

        ul = Styled.Css(@"
            display: inline-flex;
            list-style: none;
            margin: 0;
        ");

        li = Styled.Css(@"
            margin-right: 20px;
        ");
    }
}