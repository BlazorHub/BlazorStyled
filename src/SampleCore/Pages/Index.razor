@page "/"

<Styled @bind-Classname="@hover">
    label: hover-example;
    padding: 32px;
    background-color: hotpink;
    font-size: 24px;
    border-radius: 4px;
    &:hover {
        color: @color;
    }
</Styled>

<Styled @bind-Classname="@example">
    margin-top: 20px;
</Styled>

<Heading>Introduction</Heading>

<Paragraph>BlazorStyled is a library designed for writing css styles directly in a Blazor component.</Paragraph>

<Line />

<Heading HeadingSize="HeadingSize.H3">Example</Heading>

<div class="@example">
    <div class="@hover">
        Hover to change color.
    </div>
    <PrettyCode CodeFile="_content/SampleCore/index1.html" />
</div>

@code {
    private string hover, example;
    private string color = "white";
}