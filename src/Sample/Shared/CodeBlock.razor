@inject IStyled Styled

<pre class="@pre">
    <code class="@code">
        @ChildContent
    </code>
</pre>

@functions {
    [Parameter] private RenderFragment ChildContent { get; set; }
    private string pre, code;

    protected override async Task OnInitAsync()
    {
        await Styled.Fontface(@"
            font-family: 'Fira Mono';
            font-style: normal;
            font-weight: 400;
            font-display: swap;
            src: local('Fira Mono Regular'), local('FiraMono-Regular'), url(https://fonts.gstatic.com/s/firamono/v7/N0bX2SlFPv1weGeLZDtgJv7S.woff2) format('woff2');
            unicode-range: U+0000-00FF, U+0131, U+0152-0153, U+02BB-02BC, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2122, U+2191, U+2193, U+2212, U+2215, U+FEFF, U+FFFD;
        ");

        pre = await Styled.Css(@"
            padding-right: 16px;
            padding-left: 16px;
            border-radius: 4px;
            margin-left: 0px;
            margin-right: 0px;
            margin-top: 5px;
            margin-bottom: 5px;
            white-space: pre-wrap;
            word-break: break-word;
            background: rgb(40, 41, 54);
        ");

        code = await Styled.Css(@"
            color: rgb(204, 204, 204);
            text-shadow: none;
            font-family: 'Fira Mono';
            text-align: left;
            white-space: pre;
            word-spacing: normal;
            word-break: normal;
            overflow-wrap: normal;
            line-height: 1.5;
            tab-size: 2;
            hyphens: none;
            background: rgb(40, 41, 54);
            width: 787px;
        ");
    }
}